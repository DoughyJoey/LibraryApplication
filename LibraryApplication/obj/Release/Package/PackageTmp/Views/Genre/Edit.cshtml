@model LibraryApplication.Models.Genre

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3><b>Edit</b></h3>

        <div class="form-border" style="border:3px solid #D9B9C8; border-radius:7px;">
            @*Saves ID of genre on the page so it is passed when edited*@
            @Html.HiddenFor(m => m.ID)
            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>

    <br />
    <div>
        @*go back to the index back*@
        @Html.Partial("_GoBackButtonPartial")
        <input type="submit" value="Save" class="btn btn-sm btn-primary" />
    </div>
}


