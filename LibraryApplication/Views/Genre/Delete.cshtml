@model LibraryApplication.Models.Genre
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div>
        <h2>Are you sure?</h2>
        <hr />
        <div class="form-border">
            @*disabled attribute used to stop user from editing information*@
            <fieldset disabled>
                <div class="row" style="padding-bottom:20px; padding-top:7px;">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <br/>
    <div>
        @*go back to the index back*@
        @Html.Partial("_GoBackButtonPartial")
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
    </div>
}

