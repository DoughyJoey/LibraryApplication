@model LibraryApplication.Models.Membership

@{
    ViewBag.Title = "Details";
}

<h3>Details</h3>

<div>
    <hr />

    <fieldset disabled>
        <div class="form-border">
            <div class="row" style="padding-bottom:6px; padding-top:6px;">
                <div class="col-sm-2">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:6px; padding-top:6px;">
                <div class="col-sm-2">
                    @Html.LabelFor(model => model.SignUpFee, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.SignUpFee, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:6px; padding-top:6px;">
                <div class="col-sm-2">
                    @Html.LabelFor(model => model.ChargeRateSixMonth, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ChargeRateSixMonth, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:6px; padding-top:6px;">
                <div class="col-sm-2">
                    @Html.LabelFor(model => model.ChargeRateTwelveMonth, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ChargeRateTwelveMonth, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </fieldset>

    <br />
    <div class="form-actions no-color">
        @Html.Partial("_EditButtonPartial", Model.ID)
        @Html.Partial("_GoBackButtonPartial")
    </div>

</div>
